<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console logs -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}][%t][%p] %c{1} - %m%n"/>
        </Console>
        <!-- Rolling file -->
        <RollingFile name="FileLogger"
                     fileName="logs/framework.log"
                     filePattern="logs/framework-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}][%t][%p] %c{1} - %m%n"/>

            <Policies>
                <!-- New file each day -->
                <TimeBasedTriggeringPolicy />
                <!-- And when size exceeds 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <!-- Keep only last 7 days -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Framework logs -->
        <Logger name="com.sudip" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>
</Configuration>
